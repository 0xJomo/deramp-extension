{
  "manifest_version": 2,
  "name": "deramp mobile",
  "description": "firefox addon for android enabling instant onramps to crypto",
  "version": "0.2.4",
  "browser_specific_settings": {
    "gecko": {
      "id": "mac@mac.com",
      "strict_min_version": "113.0"
    },
    "gecko_android": {
      "id": "mac@mac.com",
      "strict_min_version": "120.0"
    }
  },
  "icons": {
    "16": "images/icon256.png?width=16",
    "24": "images/icon256.png?width=24",
    "32": "images/icon256.png?width=32",
    "48": "images/icon256.png?width=48",
    "64": "images/icon256.png?width=64",
    "128": "images/icon256.png?width=128",
    "256": "images/icon256.png"
  },
  "page_action": {
    "default_popup": "popup/index.html"
  },
  "browser_action": {
    "default_title": "deramp",
    "default_icon": {
      "256": "images/icon256.png"
    },
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "content/index.js" ]
    		}
	],
  "background": {
    "scripts": ["background/index.js"]
  },
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "options_ui": {
		"browser_style": true,
		"page": "options/index.html"
	}
}
